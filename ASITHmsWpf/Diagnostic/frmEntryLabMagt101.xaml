                                                       VerticalAlignment="Top" FormatString="00" Padding="0,0,0,5" BorderThickness="0" ShowButtonSpinner="False" Minimum="01" Maximum="99" Background="Transparent" />
                                                        <TextBlock Text="." Width="5" />
                                                        <xctk:DoubleUpDown Value="{Binding Path = elressl, StringFormat={}{0: 00}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="30" 
                                                                       IsEnabled="{Binding elSlEnabled}" VerticalAlignment="Top" FormatString="00" Padding="0,0,0,5" BorderThickness="0" 
                                                                       ShowButtonSpinner="False" Minimum="01" Maximum="99" Background="Transparent" />
                                                        <TextBlock Text="." Width="5" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="200" Header="Test Descriptions" >
                                            <DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <!--<TextBlock VerticalAlignment="Top" Text="{Binding eldesc}" ToolTip="{Binding eldesc}" Margin="2,0,0,0" FontWeight="{Binding elFontBold}" />-->
                                                        <xctk:WatermarkTextBox BorderThickness="0" AutoSelectBehavior="OnFocus" Padding="2,0,0,0" Style="{StaticResource wtxtBx}" Watermark="Description" 
                                                    Background="Transparent" VerticalAlignment="Top" AcceptsReturn="True" ToolTip="{Binding eldesc}" FontWeight="{Binding elFontBold}"
                                                    Text="{Binding Path = eldesc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="340" >
                                            <DataGridTemplateColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="Result Format" Width="400" TextAlignment="Center" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.HeaderTemplate>
                                            <DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <xctk:WatermarkTextBox BorderThickness="0" AutoSelectBehavior="OnFocus" Padding="2,0,0,0" Style="{StaticResource wtxtBx}" Watermark="Result Format" 
                                                    Background="Transparent" VerticalAlignment="Top" AcceptsReturn="True" FontWeight="{Binding elFontBold}"  Visibility="{Binding elVisible}" TextWrapping="Wrap"
                                                    Text="{Binding Path = elresval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="200" Header="Reference Values" >
                                            <DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <xctk:WatermarkTextBox BorderThickness="0"  AutoSelectBehavior="OnFocus" Padding="2,0,0,0" Style="{StaticResource wtxtBx}" Watermark="Reference Values" Background="Transparent"
                                                       AcceptsReturn="True" VerticalAlignment="Top" Text="{Binding Path = elrefval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                           FontWeight="{Binding elFontBold}" Visibility="{Binding elVisible}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="45" Header="Style" >
                                            <DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <xctk:WatermarkTextBox BorderThickness="0"  AutoSelectBehavior="OnFocus" Padding="2,0,0,0" Style="{StaticResource wtxtBx}" Watermark="Style" Background="Transparent"  AcceptsReturn="True"  VerticalAlignment="Top" Text="{Binding Path = elstyle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="10" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                            <StackPanel x:Name="stkpNav1" Orientation="Horizontal" HorizontalAlignment="Left" Height="20" Width="210" Visibility="Visible" Margin="200,-575,0,0" Background="#FFEEEDE4">
                                <Button x:Name="btnTop" Content="|&lt;" ToolTip="First record" Width="20" FontWeight="Bold" Background="Transparent" BorderThickness="0" Padding="0,0,0,0" Focusable="False" Click="btnNav_Click" />
                                <Button x:Name="btnPrev" Content="&lt;" ToolTip="Previous record" Width="20" FontWeight="Bold" Background="Transparent" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,0,0" Focusable="False" Click="btnNav_Click" />
                                <Button x:Name="btnNext" Content="&gt;"  ToolTip="Next record" Width="20" FontWeight="Bold" Background="Transparent" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,0,0" Focusable="False" Click="btnNav_Click" />
                                <Button x:Name="btnBottom" Content="&gt;|" ToolTip="Last record" Width="20" FontWeight="Bold" Background="Transparent" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,0,0" Focusable="False" Click="btnNav_Click" />
                                <Button x:Name="btnDelete" Content="[ x ]" ToolTip="Delete record" Width="25" FontWeight="Bold" Background="Transparent" BorderThickness="0" Padding="0,0,0,0" Margin="10,0,0,0" Focusable="False" Click="btnNav_Click" />
