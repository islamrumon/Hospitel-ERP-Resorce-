                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" ScrollViewer.HorizontalScrollBarVisibility="Auto" SelectionUnit="FullRow" 
                                  SelectionMode="Single" RowHeaderWidth="0" AlternationCount="2" AlternatingRowBackground="#FFEDFFEE" FrozenColumnCount="2" >
