                    <TextBlock Text="To" Width="20" Margin="5,0,0,0"  VerticalAlignment="Center" />
                    <xctk:DateTimePicker x:Name="xctk_dtpSrchDat2" Style="{StaticResource StdDateTimePickerStyle01}" Width="110" />
                    <Button x:Name="btnFilter1" Content="Re-build" Width="75" Click="btnFilter1_Click" Margin="10,1,0,1" />
