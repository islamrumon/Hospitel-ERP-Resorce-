                </StackPanel>
                <StackPanel >
                    <DataGrid x:Name="dgvTransList" CanUserResizeRows="False" Background="Transparent" BorderThickness="0" FontSize="11" Margin="5,3,5,0" VerticalAlignment="Top" Height="450" 
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden" SelectionUnit="FullRow" 
                              MouseDoubleClick="dgvTransList_MouseDoubleClick"  AlternationCount="2" AlternatingRowBackground="#FFEDFFEE" >
