<TabItem x:Class="ASITHmsWpf.UserControls.TabItemWithButton"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Initialized="TabItem_Initialized" Loaded="TabItem_Loaded" Style="{StaticResource StdTabItemStyle02}" Width="100" Padding="0,0,0,0" >
    <TabItem.Header>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="txtb1" TextAlignment="Center" Width="80" FontWeight="Bold" />
            <Button x:Name="btn1" Content="x" Width="14" Height="13" ToolTip = "Double Click here to remove this panel" BorderThickness="0,0,0,0" Background="Transparent" Cursor="Hand" Padding="0,0,0,0" />
        </StackPanel>
    </TabItem.Header>
    <StackPanel x:Name="stkp1" />
</TabItem>
